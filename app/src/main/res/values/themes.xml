<resources>
    <!-- Base application theme. -->
    <style name="Theme.Food" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <item name="android:statusBarColor">#50000000</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.Food">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>


    <style name="ScrollViewStyle">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbarThumbVertical">@null</item>
    </style>

    <style name="FTextView">
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/text_large_22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FEditText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/colorBlack</item>
        <item name="boxStrokeColor">@color/colorPrimaryDark</item>
        <item name="hintTextColor">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="passwordToggleTint">@color/colorGray</item>
    </style>

    <style name="FEditText.White" parent="FEditText">
        <item name="boxBackgroundColor">@color/colorWhite</item>
    </style>

    <style name="FEditText.Primary" parent="FEditText">
        <item name="boxBackgroundColor">@color/colorPrimary</item>
    </style>

    <style name="FEditText.Light" parent="FEditText.Primary">
        <item name="android:textColorHint">@color/colorWhite</item>
    </style>


    <style name="TextInputEditTextTheme">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:paddingStart">0dp</item>
    </style>

    <style name="TextInputEditTextThemeLight">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:paddingStart">0dp</item>
    </style>


    <style name="FButton">
        <item name="backgroundTint">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">3dp</item>
        <item name="android:textSize">@dimen/text_normal_16sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="FButton.Dark" parent="FButton">
        <item name="android:background">@drawable/f_btn_primary_20</item>
        <item name="android:textColor">@drawable/selector_text_white_to_dark</item>
    </style>

    <style name="EfButton.DarkLine" parent="FButton">
        <item name="android:background">@drawable/rippled_primary_line_20</item>
        <item name="android:textColor">@drawable/selector_text_primary_to_light</item>
    </style>

    <style name="FButton.Dark.NoPadding" parent="FButton.Dark">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>


    <style name="EfButton.White" parent="FButton">
        <item name="android:background">@drawable/f_btn_white_20</item>
        <item name="android:textColor">@drawable/selector_text_primary_to_dark</item>
    </style>


    <style name="SecButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@drawable/selector_text_primary_to_light</item>
        <item name="android:padding">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SecButton.Light" parent="SecButton">
        <item name="android:textColor">@drawable/selector_text_white_to_primary_light</item>
    </style>

    <style name="FNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="itemIconTint">@color/colorBlack</item>
        <item name="itemBackground">@drawable/bottom_navigation_bg</item>
        <item name="itemPadding">10dp</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!--Menu Button-->
    <style name="MenuButton">
        <item name="android:background">@drawable/rippled_white_btn</item>
        <item name="drawableTint">@color/colorPrimary</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_small_12sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

</resources>